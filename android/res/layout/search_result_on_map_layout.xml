<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_result_on_map_view"
    android:layout_width="183dip"
    android:layout_height="72dp">
    
    <RelativeLayout 
          android:layout_width="180dp"
          android:layout_height="45dp"
          android:background="@color/grey"
          android:layout_marginLeft="2dp"
          android:layout_marginTop="2dp"/>
    
      <LinearLayout
          android:id="@+id/search_result_on_map_view_container"
          android:layout_width="180dp"
          android:layout_height="45dp"
          android:background="@color/white"
          android:orientation="vertical" >
	   
          <RelativeLayout
              android:layout_width="fill_parent" 
              android:layout_height="5dp"
              android:background="@color/gold"/>
          
        <TextView
            android:id="@+id/search_result_on_map_view_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gold"
            android:textSize="15.0dp"
            android:textStyle="bold" />
        
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	            
		        <TextView
		            android:layout_marginLeft="3dp"
		            android:layout_marginBottom="2dp"
		            android:textColor="@color/darkgrey"
					android:layout_width="fill_parent"
					android:layout_height="15dp"
					android:textSize="12.0dp"
		            android:singleLine="true"
		            android:ellipsize="end"
			    	android:id="@+id/search_result_on_map_view_details"/>
		        
		       	<ImageView
		       	    android:id="@+id/search_result_on_map_view_image"
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"/>
		       	
	        </RelativeLayout>
	 	</LinearLayout>

      <RelativeLayout
          android:layout_width="15dp"
          android:layout_height="20dp"
          android:layout_below="@id/search_result_on_map_view_container"
          android:layout_centerHorizontal="true"
          android:scaleType="fitXY"
          android:background="@drawable/arrow1" />
	
</RelativeLayout>
