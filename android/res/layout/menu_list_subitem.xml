<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp">
    
	<LinearLayout
		android:id="@+id/menu_list_item_background_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		>
		
	    <RelativeLayout android:layout_width="fill_parent"
	        			android:layout_height="wrap_content">
		    
		    <ImageView
		        android:id="@+id/menu_list_item_content_background"
		  		android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		        			
		    <TextView
		        android:id="@+id/menu_list_item_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="36dp"
		        android:gravity="left|center_vertical"
		        android:textAppearance="?android:attr/textAppearanceListItemSmall"
		        android:textColor="@color/darkgrey"
		        android:singleLine="true"
		        android:textSize="20dp" />
		    
		    <ImageView
		        android:id="@+id/menu_list_item_icon"
		      	android:contentDescription="@string/content_desc_category_icon"
		  		android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="center"
		        android:src="@drawable/icon1_coffee"/>
				    
			<RelativeLayout
		        android:id="@+id/menu_list_divider_container"
		    	android:layout_width="fill_parent"
		        android:layout_height="1dp"
				android:layout_below="@+id/menu_list_item_icon"/>

	    </RelativeLayout>
	</LinearLayout>
</RelativeLayout>