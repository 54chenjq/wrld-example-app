<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_menu_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false" >
    
    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        
        <RelativeLayout
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:id="@+id/settings_menu_drag_tab_view"
	        android:clickable="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true">
		        
		    <ImageView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
				android:src="@drawable/menu_button" >
			</ImageView>
			    
		    <ImageView
		        android:id="@+id/settings_menu_drag_interaction_arrow"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:layout_centerInParent="true"
		        android:clickable="false"
		        android:focusable="false"
		        android:focusableInTouchMode="false"
				android:src="@drawable/menu_list" >
			</ImageView>
		
		</RelativeLayout>
	        
		<LinearLayout
	        android:id="@+id/settings_menu_view_list_container"
	    	android:layout_toRightOf="@+id/settings_menu_drag_tab_view"
		    android:layout_width="220dp"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:background="@android:color/transparent"
			android:cacheColorHint="@android:color/transparent">
	       
		    <RelativeLayout
		        android:layout_height="50dp"
		        android:layout_width="fill_parent"
		        android:background="@color/white">
		
			    <ImageView
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
					android:src="@drawable/menu_bar" >
				</ImageView>

		        <TextView
		            android:id="@+id/search_menu_result_count"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="8dp"
		            android:layout_marginRight="8dp"
		            android:text="Settings"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		        
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:background="@android:color/transparent"
				android:cacheColorHint="@android:color/transparent">
		    
			    <ListView
			        android:id="@+id/settings_menu_item_list"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:dividerHeight="0dp"
					android:divider="@null"
					android:listSelector="@android:color/transparent"
					android:background="@android:color/transparent"
					android:cacheColorHint="@android:color/transparent"
				    android:clipChildren="false"
				    android:clipToPadding="false"/>
		    
		    </RelativeLayout>
	        
		</LinearLayout>

	</RelativeLayout>
	
</RelativeLayout>
