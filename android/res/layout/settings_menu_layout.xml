<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_menu_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false" >
    
    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        
        <RelativeLayout
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:id="@+id/settings_menu_drag_tab_view"
	        android:clickable="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true">

		    <ImageButton
		        android:id="@+id/settings_menu_drag_button_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/menu_button_color_states"
		        android:src="@drawable/button_settings_menu_states" />
		
		</RelativeLayout>
	        
		<LinearLayout
		    android:id="@+id/settings_menu_view_list_container"
		    android:layout_width="249dp"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/settings_menu_drag_tab_view"
		    android:background="@android:color/transparent"
		    android:cacheColorHint="@android:color/transparent"
		    android:orientation="vertical" >
	       
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:background="@color/gold" >

		        <TextView
		            android:id="@+id/search_menu_result_count"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="8dp"
		            android:layout_marginRight="8dp"
		            android:text="Settings"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		        
	        </RelativeLayout>

	        <ListView
	            android:id="@+id/settings_menu_item_list"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:background="@color/ui_border"
	            android:cacheColorHint="@android:color/transparent"
	            android:clipChildren="false"
	            android:clipToPadding="false"
	            android:divider="@null"
	            android:dividerHeight="0dp"
	            android:listSelector="@android:color/transparent"
	            android:paddingLeft="5dp"
	            android:paddingRight="32dp" >
	        </ListView>
	        
		</LinearLayout>

	</RelativeLayout>
	
</RelativeLayout>
