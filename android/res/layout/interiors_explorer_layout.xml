<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/interiors_explorer_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <LinearLayout 
    android:id="@+id/top_panel"
    android:layout_width="wrap_content"
    android:layout_height="40dp" >

		<TextView
			android:layout_width="200dp"
	        android:layout_height="fill_parent"
	        android:gravity="center"
            android:layout_centerInParent="true"
	        android:textColor="@color/darkgrey"
	        android:textSize="18dp"
	        android:background="@layout/interiors_floor_name_box"
	        android:id="@+id/floor_name" >
		</TextView>
		
	    <ImageView
	        android:layout_width="40dp"
	        android:layout_height="fill_parent"
	        android:id="@+id/back_button"
	        android:background="@layout/interiors_floor_back_box"
			android:src="@drawable/interior_exit" >
		</ImageView>
	</LinearLayout>

	<include layout="@layout/interiors_floor_list_container_layout"/>

</RelativeLayout>
