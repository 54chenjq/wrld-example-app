<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_menu_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:clipChildren="false"
    android:clipToPadding="false" >
    
    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    
	    <LinearLayout
	        android:id="@+id/search_menu_drag_tab_container_view"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp" >
	        
    	 	<include layout="@layout/search_results_bar_layout"/>
		
		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
		        
		    	<RelativeLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/search_menu_drag_tab_view"
				    android:scaleX="-1"
			        android:background="@drawable/menu_button"/>
		        
		        <ProgressBar
		            android:id="@+id/search_menu_spinner"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:padding="5dp"
		            android:layout_centerInParent="true"
		            android:background="@android:color/transparent" />
		        
		        <TextView
		            android:id="@+id/search_menu_num_results_text"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:layout_centerInParent="true"
		            android:textColor="@color/white"
    				android:gravity="center"
		        	android:textSize="22dp"
		            android:background="@android:color/transparent" />
			</RelativeLayout>
		</LinearLayout>
		
   	 	<include layout="@layout/search_menu_view_list_container_layout"/>
	</RelativeLayout>
</RelativeLayout>
