<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:layout_width="212dp"
    android:layout_height="42dp"
    android:background="@drawable/search_menu_header_item_selected_states" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >
	
	    <RelativeLayout
	        android:id="@+id/menu_list_item_icon"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center"
	        android:layout_margin="6dp"
	        android:background="@drawable/icon1_coffee"
	        android:contentDescription="@string/content_desc_category_icon" />
	    
	    <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         android:orientation="vertical"
		     android:background="@android:color/transparent">
            
		    <TextView
		        android:id="@+id/menu_list_item_name"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="4dp"
		        android:background="@android:color/transparent"
		        android:maxLines="1"
		        android:text="Mexico"
		        android:textAppearance="?android:attr/textAppearanceListItemSmall"
		        android:textColor="@color/table_search_text"
		        android:textSize="14sp" />
		
		     <TextView
		         android:id="@+id/menu_list_item_detail"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:background="@android:color/transparent"
		         android:maxLines="1"
		         android:text="Mexico"
		         android:textAppearance="?android:attr/textAppearanceListItemSmall"
		         android:textColor="@color/table_search_detail_text"
		         android:textSize="11sp" />
	     
	     </LinearLayout>
	</LinearLayout>
		    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/ui_border" />

</RelativeLayout>