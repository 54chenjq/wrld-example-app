<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingEnd="0dip"
    android:minHeight="0dip"
	>
	
    <RelativeLayout android:id="@+id/menu_list_item_icon"
        			android:contentDescription="@string/content_desc_category_icon"
        			android:layout_width="32dp"
        			android:layout_height="50dp"
        			android:background="@drawable/icon2_coffee"/>
    
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical"
         android:background="@drawable/menu_item_selected_states">
            
	    <TextView
	        android:id="@+id/menu_list_item_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:maxLines="1"
	        android:textAppearance="?android:attr/textAppearanceListItemSmall"
	        android:textColor="@color/gold" 
	        android:textSize="15.0dp"
	        android:textStyle="bold"/>
	
	     <TextView
	        android:id="@+id/menu_list_item_detail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceListItemSmall"
	        android:textSize="12dp"
	        android:textColor="@color/darkgrey"
	        android:maxLines="1"
	        android:layout_marginLeft="10dp" />
     
     </LinearLayout>
    
</LinearLayout>