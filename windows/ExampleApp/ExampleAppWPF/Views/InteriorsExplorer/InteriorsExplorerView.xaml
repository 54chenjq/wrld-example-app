<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExampleAppWPF">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Colours.xaml" />
        <ResourceDictionary Source="../../TransparentButtonStyle.xaml" />
        <ResourceDictionary Source="../../SimpleSlider.xaml" />        
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ExitButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Image VerticalAlignment="Center" HorizontalAlignment="Center" Width="40" Height="40" Source="/Assets/menu_button.png">
                            <Image.LayoutTransform>
                                <ScaleTransform ScaleX="-1"/>
                            </Image.LayoutTransform>
                        </Image>
                        <Image Name="PART_Image" Source="/Assets/button_exit_interior_off.png" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Source" Value="/Assets/button_exit_interior_on.png" TargetName="PART_Image"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="{x:Type local:InteriorsExplorerView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:InteriorsExplorerView}">
                    <Grid>
                        <Grid Name="DetailsPanel" Width="Auto" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Border Name="Mask" CornerRadius="5,0,0,5" Background="White"/>
                                <Grid>
                                    <Grid.Background>
                                        <ImageBrush ImageSource="/Assets/place_pin_background.png">
                                        </ImageBrush>
                                    </Grid.Background>
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Mask}"/>
                                    </Grid.OpacityMask>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="FloorName" Foreground="{StaticResource DarkGrey}" FontSize="16"/>
                                </Grid>
                            </Grid>
                            <Button Name="DismissButton" Width="40" Height="40" Grid.Column="1" Style="{StaticResource ExitButtonStyle}"/>
                        </Grid>

                        <Grid Name="FloorPanel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="auto">
                            <Slider Name="FloorSlider"
                                    Grid.Column="0"
                                    Style="{StaticResource SimpleSlider}"
                                    Orientation="Vertical"                                    
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,20,20"
                                    MinHeight="300"
                                    Minimum="0"
                                    Maximum="1"
                                    TickFrequency="1"
                                    TickPlacement="TopLeft"                                    
                                    IsMoveToPointEnabled="True"
                                    Foreground="{StaticResource LightGrey}"
                            />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>