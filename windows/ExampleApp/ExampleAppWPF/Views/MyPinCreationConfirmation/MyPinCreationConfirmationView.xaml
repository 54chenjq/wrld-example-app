<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExampleAppWPF">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Colours.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:MyPinCreationConfirmationView}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MyPinCreationConfirmationView}" >
                    <StackPanel Name="MainPanel" Background="{StaticResource White}"  Orientation="Horizontal">
                        <Image Name="Close" Source="/ExampleAppWPF;component/Assets/button_close_place_pin_off.png" Width="60" Height="60" Stretch="Uniform"/>
                        <TextBlock Text="Drag marker to place pin" FontSize="14" Foreground="Gray" Margin="5, 0, 5, 0" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Image Name="Ok" Source="/ExampleAppWPF;component/Assets/button_ok_place_pin_off.png" Width="60" Height="60" Stretch="Fill"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="290"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
    
</ResourceDictionary>